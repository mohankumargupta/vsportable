{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "my-capabilities",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "dialog:allow-open",
        {
            "identifier": "fs:scope",
            "allow": [
                {
                    "path": "$HOME/**"
                }
            ]
        }
    ]
}